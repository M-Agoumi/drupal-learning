<a href="/admin/payment-methods/add" style="float: right; margin-bottom: 15px;">
  <button style="border: 1px solid #f5f5f2;background: #ff7901;padding: 15px 40px;color: #f5f5f2;font-weight: 500;">
    New
  </button>
</a>
<div class="content">
  <table>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Name Arabic</th>
      <th>Code</th>
      <th>Description</th>
      <th>Description Arabic</th>
      <th>Enabled</th>
      <th>Created</th>
      <th>Modified</th>
      <th>Action</th>
    </tr>
    {% for row in content.data %}
      <tr>
        <td>{{ row.id }}</td>
        <td>{{ row.name }}</td>
        <td>{{ row.name_ar }}</td>
        <td>{{ row.code }}</td>
        <td>{{ row.description }}</td>
        <td>{{ row.description_ar }}</td>
        <td>{{ (row.status) ? 'Oui' : 'Non' }}</td>
        <td>{{ row.created | date }}</td>
        <td>{{ row.changed ? row.changed | date : '-' }}</td>
        <td>
          <a href="/admin/payment-methods/update/{{ row.id }}">update</a>
          {% if row.status %}
            <a href="{{ url('payment_methods.disable', {'id': row.id}) }}">disable</a>
          {% else %}
            <a href="{{ url('payment_methods.enable', {'id': row.id}) }}">enable</a>
          {% endif %}
          <a href="/admin/payment-methods/delete/{{ row.id }}"
          onclick="if(!confirm('Are you sure you want to Delete This? this action is unrecoverable')){ event.preventDefault() }">delete</a>
        </td>
      </tr>
    {% endfor %}
  </table>
</div>
